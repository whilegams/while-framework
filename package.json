{
    "name": "while-framework",
    "version": "1.0.0",
    "description": "",
    "browserslist": "> 0.25%, not dead",
    "scripts": {
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- -w",
        "prebuild": "npm run clean",
        "clean": "npx rimraf dist",
        "build": "npm run clean && tsc",
        "test": "npx jest",
        "code-coverage": "jest --coverage",
        "prettier": "npx prettier",
        "prettier:format": "npm run prettier -- --write src/**/*.ts",
        "prettier:check": "npm run prettier -- -c ./src/**/*.ts",
        "lint-check": "npx eslint ./src/**/*.ts",
        "code-style-check": "npm run lint-check && npm run prettier:check",
        "prepare": "husky install"
    },
    "author": "whilesocold",
    "license": "MIT",
    "dependencies": {
        "@pixi/layout": "^0.3.4",
        "@pixi/ui": "^0.10.1",
        "@tweenjs/tween.js": "^18.6.4",
        "core-js": "^3.26.0",
        "gsap": "^3.11.5",
        "pixi-spine": "^4.0.4",
        "pixi.js": "^7.4.2",
        "regenerator-runtime": "^0.13.10"
    },
    "devDependencies": {
        "@types/jest": "^29.2.0",
        "@types/node": "^18.11.7",
        "@types/offscreencanvas": "^2019.7.0",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "browserslist": "^4.21.4",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.2.2",
        "jest-canvas-mock": "^2.4.0",
        "jsdom": "^20.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
        },
        "setupFiles": [
            "jest-canvas-mock"
        ]
    }
}
